<h1>create group</h1>
<%= form_with model: @groups, local:true do |f| %>
<div class="form-group">
  <%= f.label :name, "グループ名" %>
  <%= f.text_field :name %>
</div>

<div class= "form-group">
  <%= f.label :introduction, "紹介文" %>
  <%= f.text_field :introduction %>
</div>

<div class="form-group">
   <%= f.label :image, "グループ画像" %>
   <%= f.attachment_field :image %>
</div>
<%= f.submit "Update User", class:"btn btn-secondary" %>
<% end %>