<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  </head>

  <body>

    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <span class="text-color">Bookers</span>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

              <% if user_signed_in? %>
              <li><%= link_to "Home", books_path, class: 'nav-link text-light'%> </li>
              <li><%= link_to "User", user_session_path, class: 'nav-link text-light'%></li>
              <li><%= link_to "Books", edit_user_password_path, class: 'nav-link text-light'  %></li>
              <li><%= link_to "Logout", destroy_user_session_path, class: 'nav-link text-light',method: :delete %></li>

              <% else %>
              <li><%= link_to "Home", books_path, class: 'nav-link text-light' %> </li>
              <li><%= link_to "About", books_path, class: 'nav-link text-light' %></li>
              <li><%= link_to "Sign up", new_user_registration_path, class: 'nav-link text-light' %></li>
              <li><%= link_to "Login", new_user_session_path, class: 'nav-link text-light' %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>

    

    <footer>
      <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
      <p>CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
