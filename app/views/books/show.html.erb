      <!--ここから下が右側へ-->
  <div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
              <%= render "users/userinfo", user: @user %>
              <%= render "books/newbook", book: @book %>
    　</div>
     <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table table-user-show">
        <tr>
          <td><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no-image.jpg"%></td>
          <td><%= link_to @user.name, user_path(@user) %></td>
          <td><%= @books.title %></td>
          <td><%= @books.body %></td>
          <% if @books.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@books), class:"btn btn-success"%></td>
            <td><%= link_to "Destroy", book_path(@books), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>