  <p id="notice"></p>

    <div class="container">
      <div class="row">
          <div class="col-md-3">
                <%= render "users/userinfo", user: @user %>
                <%= render "books/newbook", book: @book %>
                <% if @book.errors.any? %>
                  <%= @book.errors.count %> errors prohibited this obj from being saved
                    <% @book.errors.full_messages.each do |message| %>
                      <%= message %>
                    <% end %>
                <% end %>
          </div>
          <div class="col-md-9">
              <h2>Users</h2>
              <table class="table table-hover table-inverse">
               <thead>
                   <tr>
                     <th>image</th>
                     <th>name</th>
                     <th colspan="3"></th>
                   </tr>
               </thead>
               <tbody>

                  <% @users.each do |user| %>
                    <tr>
                      <td>
                        <%= link_to user_path(user.id) do %>
                          <%= attachment_image_tag user, :profile_image, :fill, 50, 50,fallback: "no-image.jpeg" %>

                        <% end %>
                      </td>
                      <td><%= user.name %></td>
                      <td>
                        <%= link_to "Show", user_path(user.id) %>
                      </td>

                    <% end %>
              </tbody>
             </table>
          </div>
      </div>
  </div>